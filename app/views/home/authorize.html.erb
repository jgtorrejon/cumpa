<div class="login-box">
  <div class="login-logo">
    <a href="#"><b>BNB</b> Client-Boot</a>
  </div>
  <div class="login-box-body">
    <p class="login-box-msg">Iniciar Sesi√≥n</p>
    <%= form_tag(home_before_authorize_path,method: "post") do %>
        <div class="form-group has-feedback">
          <%= text_field_tag(:email,nil,autofocus: true, placeholder: "Email", class: "form-control" ) %>
          <%= text_field_tag(:redirect_uri,@uri,autofocus: "off", placeholder: "Email", class: "form-control hide" ) %>
          <%= password_field_tag(:password,nil,autocomplete: "off", placeholder: "Password", class: "form-control" ) %>
        </div>
        <div class="row">
          <div class="col-xs-4">
            <%= submit_tag("Login") %>
          </div>
        </div>
    <% end %>

  </div>
</div>
