%h1 Listing messages

%table
  %thead
    %tr
      %th Message
      %th Fb message
      %th User
      %th
      %th
      %th

  %tbody
    - @messages.each do |message|
      %tr
        %td= message.message
        %td= message.fb_message_id
        %td= message.user
        %td= link_to 'Show', message
        %td= link_to 'Edit', edit_message_path(message)
        %td= link_to 'Destroy', message, :method => :delete, :data => { :confirm => 'Are you sure?' }

