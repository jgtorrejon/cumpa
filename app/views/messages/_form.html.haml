= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :message
    = f.text_area :message
  .field
    = f.label :fb_message_id
    = f.text_field :fb_message_id
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
